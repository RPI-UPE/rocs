<?xml version="1.0" ?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="edu.rpi.rocs.client.objectmodel.Course" table="Course">

		<id name="id" column="ID">
			<generator class="native" />
		</id>

		<property name="name">
			<column name="name" length="50" not-null="true" />
		</property>

		<property name="dept">
			<column name="department" length="4" not-null="true" />
		</property>

		<property name="num">
			<column name="number" length="4" not-null="true" />
		</property>

		<property name="credmin">
			<column name="minCredits" length="2" not-null="true" />
		</property>

		<property name="credmax">
			<column name="maxCredits" length="2" not-null="true" />
		</property>

		<property name="gradetype">
			<column name="gradeType" length="10" not-null="true" />
		</property>

		<array name="sections" cascade="all">
			<key column="courseId" />
			<index column="id" />
			<one-to-many class="Section" />
		</array>

		<array name="notes" cascade="all">
			<key column="courseId" />
			<index column="id" />
			<one-to-many class="Note" />
		</array>

	</class>

	<class name="Section" table="Section">
		<id name="id">
			<generator class="increment" />
		</id>
		<property name="number" />
	</class>

	<class name="Note" table="Note">
		<id name="id">
			<generator class="increment" />
		</id>
		<property name="details" />
	</class>
</hibernate-mapping>