<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="hibernate.connection.url">jdbc:hsqldb:file:rocsdb;hsqldb.default_table_type=cached;hsqldb.tx=mvcc</property>
        <property name="hibernate.connection.username">SA</property>
        <property name="connection.password"></property>
        <property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
        
        <property name="connection.pool_size">1</property>
        
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        
        <property name="show_sql">false</property>
        
        
        <property name="current_session_context_class">thread</property>
        
        <property name="hbm2ddl.auto">update</property>
        
        <mapping file="src/xml/Period.hbm.xml"/>
        <mapping file="src/xml/Section.hbm.xml"/>
        <mapping file="src/xml/Course.hbm.xml"/>
        <mapping file="src/xml/CourseStatusObject.hbm.xml"/>
        <mapping file="src/xml/SchedulerManager.hbm.xml"/>
        <mapping file="src/xml/Schedule.hbm.xml"/>
        <mapping file="src/xml/Semester.hbm.xml"/>
        <mapping file="src/xml/CrossListing.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
