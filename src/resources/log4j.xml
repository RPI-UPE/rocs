      <param name="ConversionPattern" value="%d{ABSOLUTE} %-5p [%c] %m%n"/>
    </layout>
  </appender>
-->
  <logger name="org.hibernate.SQL" additivity="false">
    <level value="warn"/>
    <appender-ref ref="appenderConsole"/>
  </logger>

  <root>
    <level value="info"/>
    <appender-ref ref="appenderConsole"/>
