<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<bean>
  <bean id="rocsPortlet"
	class="org.springframework.web.portlet.mvc.PortletWrappingController">
    <property name="portletClass" value="edu.rpi.rocs.Scheduler"/>
    <property name="useSharedPortletConfig" value="false"/>
    <property name="portletName" value="wrapped-rocs"/>
    <property name="initParameters">
      <props>
	<prop key="prop1">value 1</prop>
	<prop key="prop2">value 2</prop>
      </props>
    </property>
  </bean>

  <bean id="portletModeHandlerMapping"
	class="org.springframework.portlet.handler.PortletModeHandlerMapping">
    <property name="portletModeMap">
      <map>
	<entry key="view" value-ref="rocsPortlet"/>
      </map>
    </property>
  </bean>
</beans>
