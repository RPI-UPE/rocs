<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
  <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
    <property name="prefix" value="/WEB-INF/jsp/"/>
    <property name="suffix" value=".jsp"/>
  </bean>

  <bean id="dfeaultExceptionHandler" class="org.springframework.web.portlet.handler.SimpleMappingExceptionResolver">
    <property name="order" value="10"/>
    <property name="defaultErrorView" value="error"/>
    <property name="exceptionMappings">
      <props>
	<prop key="javax.portlet.PortletSecurityException">unauthorized</prop>
	<prop key="javax.portlet.UnavailableException">unavailable</prop>
      </props>
    </property>
  </bean>
</beans>
