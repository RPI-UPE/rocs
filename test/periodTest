package edu.rpi.rocs.test;

public class periodTest extends TestCase{

	Period testPeriod = new Period;
	
	public void testDay{
		assertTrue(testPeriod.getDay() == null);
		
		testPeriod.setDay("monday");
		assertTrue((testPeriod.getDay()).equals("monday"));
	}
	
	public void testTime{
		assertTrue(testPeriod.getStart() == null);
		assertTrue(testPeriod.getEnd() == null);
		
		testPeriod.setStart("1000");
		testPeriod.setEnd("1300");
		
		assertTrue((testPeriod.getStart()).equals("1000"));
		assertTrue((testPeriod.getEnd()).equals("1300"));
		
		int start = Integer.parseInt(testPeriod.getStart());
		int end = Integer.parseInt(testPeriod.getEnd());
		assertTrue(start < end);
	}
	
	public void testInstructor{
			assertTrue(testPeriod.getDay() == null);
		
		testPeriod.setDay("monday");
		assertTrue((testPeriod.getDay()).equals("monday");
	}
	
	public void testLoc{
			assertTrue(testPeriod.getDay() == null);
		
		testPeriod.setDay("monday");
		assertTrue((testPeriod.getDay()).equals("monday");
	}
	
	public void testType{
			assertTrue(testPeriod.getDay() == null);
		
		testPeriod.setDay("monday");
		assertTrue((testPeriod.getDay()).equals("monday");
	}

}//end periodTest